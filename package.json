{
  "name": "liser",
  "version": "0.1.2",
  "description":
    "functional css help to optimizing design work and building responsive websites",
  "homepage": "https://github.com/lamhieu-vk/liser",
  "author": {
    "name": "Lam Hieu",
    "email": "lamhieu.vk@gmail.com",
